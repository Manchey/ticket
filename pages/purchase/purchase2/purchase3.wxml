<!--pages/purchase/purchase2/purchase3.wxml-->
<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">预定成功</view>
            <view class="weui-msg__desc">{{date}} {{time}} </view>
            <view class="weui-msg__desc">{{route}}   座位：{{seat}} </view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="toIndex">返回主页</button>
                <button class="weui-btn" type="default" bindtap="toTicket">查看车票</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © 2019-2019 Hirain</view>
            </view>
        </view>
    </view>
</view>